<?xml version="1.0"?>
<!DOCTYPE service-builder PUBLIC "-//Liferay//DTD Service Builder 7.0.0//EN" "http://www.liferay.com/dtd/liferay-service-builder_7_0_0.dtd">

<service-builder auto-import-default-references="false" auto-namespace-tables="false" package-path="com.liferay.oauth2.provider">
	<namespace>OAuthTwo</namespace>
	<entity local-service="true" name="OAuth2Application" remote-service="true">

		<!-- PK fields -->

		<column name="oAuth2ApplicationId" primary="true" type="long" />

		<!-- Audit fields -->

		<column name="companyId" type="long" />
		<column name="createDate" type="Date" />
		<column name="modifiedDate" type="Date" />
		<column name="userId" type="long" />
		<column name="userName" type="String" />

		<!-- Other fields -->

		<column name="allowedGrantTypes" type="String" />
		<column name="clientConfidential" type="Boolean" />
		<column name="clientId" type="String" />
		<column name="clientSecret" type="String" />
		<column name="description" type="String" />
		<column name="homePageURL" type="String" />
		<column name="iconFileEntryId" type="long" />
		<column name="name" type="String" />
		<column name="privacyPolicyURL" type="String" />
		<column name="redirectURIs" type="String" />
		<column name="scopes" type="String" />

		<finder name="C" return-type="Collection">
			<finder-column name="companyId" />
		</finder>

		<finder name="C_CI" return-type="OAuth2Application">
			<finder-column name="companyId" />
			<finder-column name="clientId" />
		</finder>

		<reference entity="OAuth2RefreshToken" package-path="com.liferay.oauth2.provider" />
		<reference entity="OAuth2ScopeGrant" package-path="com.liferay.oauth2.provider" />
		<reference entity="OAuth2Token" package-path="com.liferay.oauth2.provider" />
		<reference entity="Resource" package-path="com.liferay.portal" />
	</entity>
	<entity name="OAuth2Token" local-service="true" remote-service="false">
		<!-- PK fields -->

		<column name="oAuth2TokenId" primary="true" type="long" />

		<!-- Audit fields -->

		<column name="companyId" type="long" />
		<column name="userId" type="long" />
		<column name="userName" type="String" />
		<column name="createDate" type="Date" />
		<column name="lifeTime" type="long" />

		<!-- Other fields -->

		<column name="oAuth2TokenContent" type="String" />
		<column name="oAuth2ApplicationId" type="long" />
		<column name="oAuth2TokenType" type="String" />
		<column name="oAuth2RefreshTokenId" type="long" />
		<column name="scopes" type="String" />

		<finder name="A" return-type="Collection">
			<finder-column name="oAuth2ApplicationId" />
		</finder>
		<finder name="A_U" return-type="Collection">
			<finder-column name="oAuth2ApplicationId" />
			<finder-column name="userName" />
		</finder>
		<finder name="Content" return-type="OAuth2Token">
			<finder-column name="oAuth2TokenContent" />
		</finder>
		<finder name="RefreshToken" return-type="Collection">
			<finder-column name="oAuth2RefreshTokenId"></finder-column>
		</finder>

		<reference entity="OAuth2Application" package-path="com.liferay.oauth2.provider" />
		<reference entity="OAuth2RefreshToken" package-path="com.liferay.oauth2.provider" />
	</entity>
	<entity name="OAuth2RefreshToken" local-service="true" remote-service="false">
		<!-- PK fields -->

		<column name="oAuth2RefreshTokenId" primary="true" type="long" />

		<!-- Audit fields -->

		<column name="companyId" type="long" />
		<column name="userId" type="long" />
		<column name="userName" type="String" />
		<column name="createDate" type="Date" />
		<column name="lifeTime" type="long" />

		<!-- Other fields -->

		<column name="oAuth2RefreshTokenContent" type="String" />
		<column name="oAuth2ApplicationId" type="long" />
		<column name="scopes" type="String" />

		<finder name="A" return-type="Collection">
			<finder-column name="oAuth2ApplicationId" />
		</finder>
		<finder name="A_U" return-type="Collection">
			<finder-column name="oAuth2ApplicationId" />
			<finder-column name="userName" />
		</finder>
		<finder name="Content" return-type="OAuth2RefreshToken">
			<finder-column name="oAuth2RefreshTokenContent" />
		</finder>

		<reference entity="OAuth2Application" package-path="com.liferay.oauth2.provider" />
		<reference entity="OAuth2Token" package-path="com.liferay.oauth2.provider" />
	</entity>

	<entity name="OAuth2ScopeGrant" local-service="true" remote-service="false">
		<!-- PK fields -->

		<column name="applicationName" primary="true" type="String" />
		<column name="bundleSymbolicName" primary="true" type="String" />
		<column name="companyId" type="long" primary="true" />
		<column name="oAuth2ScopeName" primary="true" type="String" />
		<column name="oAuth2TokenId" primary="true" type="long" />

		<!-- Audit fields -->

		<column name="createDate" type="Date" />

		<!-- Other fields -->


		<!-- Finder methods -->

		<finder name="Token" return-type="Collection">
			<finder-column name="oAuth2TokenId" />
		</finder>

		<finder name="A_BSN_C_O_T" return-type="OAuth2ScopeGrant">
			<finder-column name="applicationName" />
			<finder-column name="bundleSymbolicName" />
			<finder-column name="companyId" />
			<finder-column name="oAuth2ScopeName" />
			<finder-column name="oAuth2TokenId" />
		</finder>

		<reference entity="OAuth2Token" package-path="com.liferay.oauth2.provider" />
	</entity>
	<exceptions>
		<exception>DuplicateOAuth2ClientId</exception></exceptions>
</service-builder>
