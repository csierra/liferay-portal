<?xml version="1.0"?>
<!DOCTYPE struts-config PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 1.2//EN" "http://jakarta.apache.org/struts/dtds/struts-config_1_2.dtd">

<struts-config>
	<action-mappings>
		<!-- Polls -->

		<action path="/polls/edit_question" type="com.liferay.portlet.polls.action.EditQuestionAction">
			<forward name="portlet.polls.edit_question" path="/portlet/polls/edit_question.jsp" />
			<forward name="portlet.polls.error" path="/portlet/polls/error.jsp" />
		</action>

		<action path="/polls/view" forward="/portlet/polls/view.jsp" />

		<action path="/polls/view_chart" type="com.liferay.portlet.polls.action.ViewChartAction" />

		<action path="/polls/view_question" type="com.liferay.portlet.polls.action.ViewQuestionAction">
			<forward name="portlet.polls.edit_question" path="/portlet/polls/view_question.jsp" />
			<forward name="portlet.polls.error" path="/portlet/polls/error.jsp" />
		</action>

	</action-mappings>

</struts-config>